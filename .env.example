# Geocoding API Configuration
# Open-Meteo Free Geocoding API
NEXT_PUBLIC_GEOCODING_API_URL=https://geocoding-api.open-meteo.com/v1/search

# Weather Forecast API Configuration
# Open-Meteo Free Weather API
NEXT_PUBLIC_FORECAST_API_URL=https://api.open-meteo.com/v1/forecast

# MCP Handler Configuration
# Request timeout in seconds (for external API calls)
MCP_REQUEST_TIMEOUT=30

# Retry Configuration
# Number of retries for failed API calls
MCP_RETRY_ATTEMPTS=3

# Geocoding Query Configuration
# Default number of geocoding candidates to return
NEXT_PUBLIC_GEOCODING_DEFAULT_COUNT=5

# Forecast Configuration
# Default number of forecast days
NEXT_PUBLIC_FORECAST_DEFAULT_DAYS=3

# Default timezone for forecast
NEXT_PUBLIC_DEFAULT_TIMEZONE=Asia/Tokyo
